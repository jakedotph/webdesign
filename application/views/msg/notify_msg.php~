<script src="<?=base_url('assets/js/jquery.js');?>"></script>

<script>
	$(document).ready(function(){
		$("div.notify").hide();
		$("div.notify").fadeIn(200).fadeOut(200).fadeIn(200).delay(2000).fadeOut(500);
		$("div.notify").click(function(){
			$(this).fadeOut(500);
		});
	});
</script>

<div class = "notify">
<p><? echo $notify?></p>
</div>